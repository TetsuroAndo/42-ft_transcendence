# 共通設定
NODE_ENV=development

# バックエンド設定
BACKEND_HOST=localhost
BACKEND_PORT=4000
DB_PATH=./data/sqlite.db
JWT_SECRET=your_secret_key_here
JWT_EXPIRES_IN=7d

# フロントエンド設定
FRONTEND_HOST=localhost
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:4000/api

# インフラ設定
HTTP_PORT=80
HTTPS_PORT=443
REVERSE_PROXY_HOST=localhost

# Vault設定
VAULT_PORT=8200
VAULT_TOKEN=ft_transcendence_root_token

# WAF/ModSecurity設定
WAF_ENABLED=false
WAF_PARANOIA_LEVEL=1

# SSL設定
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/server.crt
SSL_KEY_PATH=/etc/nginx/ssl/server.key
